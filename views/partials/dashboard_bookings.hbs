<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
    <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2"> My Bookings </h1>
        <div class="btn-toolbar mb-2 mb-md-0">
        </div>
    </div>
    <h2>Bookings</h2>
    <div class="table-responsive">
        {{#if hasBookings}}
            <table class="table table-striped table-sm">
                <thead>
                    <tr class="font-weight-bold">
                        <td>Room Booked</td>
                        <td>Check In</td>
                        <td>Check Out</td>
                        <td>Guests Joining</td>
                        <td>Amount Paid</td>
                    </tr>
                </thead>
                <tbody>
                    {{#each bookings}}
                        <tr>
                            <td> <a class="btn btn-outline-info " href="/bnb-details/{{roomID}}">Room Details</a>
                            </td>
                            <td>{{startDate}}</td>
                            <td>{{endDate}}</td>
                            <td>{{guestsAmount}}</td>
                            <td>{{amountPaid}}</td>
                        </tr>
                        <!-- Modal -->
                        <div class="modal fade" id="removeRoom{{_id}}" tabindex="-1" aria-labelledby="exampleModalLabel"
                            aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content bg-light">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Confirm Room Delete</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body"> Are you sure you'd like to delete this room? </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">No,
                                            Cancel</button>
                                        <a href="/upload-bnb/delete/{{_id}}" class="btn btn-danger">Yes, Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{else}}
                        <tr>
                            <td colspan="8">No data was found</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{else}} No Bookings
        {{/if}}
    </div>
</main>
