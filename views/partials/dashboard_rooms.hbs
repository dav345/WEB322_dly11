<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
    <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2"> Admin Dashboard - My Uploaded Rooms </h1>
        <div class="btn-toolbar mb-2 mb-md-0">
       
        </div>
    </div>
  
    <h2>Listings</h2>
    <p class="text-info"> · Click 'Edit' to see / change other details · </p>
    <div class="table-responsive">
        {{#if hasRooms}}
            <table class="table table-striped table-sm">
                <thead>
                    <tr class="font-weight-bold">
                        <td>&nbsp;</td>
                        <td>Title</td>
                        <td>Price /night</td>
                        <td>Location</td>
                        <td>Property Type</td>
                        <td>Guests</td>
                        <td>Bedrooms</td>
                        <td>Beds</td>
                        <td>Baths</td>
                        <td>&nbsp;</td>
                    </tr>
                </thead>
                <tbody>
                    {{#each rooms}}
                        <tr>
                            <td><a href="/upload-bnb/edit/{{_id}}">Edit</a></td>
                            <td>{{title}}</td>
                            <td>{{price}}</td>
                            <td>{{location}}</td>
                            <td>{{propertyType}}</td>
                            <td>{{guestsNum}}</td>
                            <td>{{bedroomsNum}}</td>
                            <td>{{bedsNum}}</td>
                            <td>{{bathsNum}}</td>
                            <td>
                                <button class="btn btn-outline-primary" data-toggle="modal"
                                    data-target="#removeRoom{{_id}}">Delete</button>
                            </td>
                        </tr>
                        <!-- Modal -->
                        <div class="modal fade" id="removeRoom{{_id}}" tabindex="-1" aria-labelledby="exampleModalLabel"
                            aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content bg-light">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Confirm Room Delete</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body"> Are you sure you'd like to delete this room? </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">No,
                                            Cancel</button>
                                        <a href="/upload-bnb/delete/{{_id}}" class="btn btn-danger">Yes, Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{else}}
                        <tr>
                            <td colspan="8">No data was found</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{else}} No Rooms
        {{/if}}
    </div>
</main>
