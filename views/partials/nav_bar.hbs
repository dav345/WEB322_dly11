      {{#if user}}
        <a class="btn btn-outline-secondary my-2 my-sm-0 font-weight-bold" role="button" href="#"> {{user.username}}
        </a>
        <a class="btn btn-outline-info my-2 my-sm-0 font-weight-bold" role="button" href="/sign-out-process"> Sign-Out
